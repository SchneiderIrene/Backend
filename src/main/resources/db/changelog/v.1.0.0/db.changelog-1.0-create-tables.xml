<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="chicagoist">
        <createTable tableName="role">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="chicagoist">
        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)"/>
            <column name="roles" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="chicagoist">
        <createTable tableName="pot">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="instruction_id" type="BIGINT"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="chicagoist">
        <createTable tableName="user_role">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="role_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="5" author="chicagoist">
        <createTable tableName="instruction">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="content" type="TEXT"/>
            <column name="is_important" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="day" type="DATE">
                <constraints unique="true"/>
            </column>
            <column name="image" type="VARCHAR(128)"/>
        </createTable>
    </changeSet>

    <changeSet id="6" author="chicagoist">
        <createTable tableName="confirm_code">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(36)">
                <constraints unique="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="expired" type="TIMESTAMP">
                <constraints unique="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
